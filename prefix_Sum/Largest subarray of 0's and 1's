class Solution:
    def maxLen(self, arr):
        # code here
         # this is lingest subarray with sum 0 
        # now we will make all the  0 to -1
        for i in range(len(arr)):
            # now  replace the 0 with -1
            if(arr[i] == 0):
                #replace the element with -1
                arr[i] = -1
        # initialise the var
        l= 0
        sum = 0
        map = {}
        k = 0
        for j in range(len(arr)):
            # form the sum
            sum+= arr[j]
            # if sum == 0
            if (sum == k) :
                # find the lenght
                l = max(l , j+1)
            #if the sum not in map
            if sum not in map:
                map[sum] = j
            # if sum - k in the map
            if (sum - k) in map:
                # find the lenght
                l = max(l , j-(map[sum-k]))
        return l
                
        
        
        
